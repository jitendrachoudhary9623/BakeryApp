<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bakery_app.jitcodez.bakeryapp.fragments.RecipeListFragment">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:id="@+id/ingedient_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="10dp">

        <TextView
            android:text="Ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="25dp"
        android:layout_below="@+id/ingedient_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_ingridents"></android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:layout_below="@+id/rv_ingridents"
        android:id="@+id/step_title"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="10dp">
        <TextView
            android:text="Steps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"



            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/step_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/rv_steps"></android.support.v7.widget.RecyclerView>
</RelativeLayout>
